<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/mapview"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/wallet_dim_foreground_holo_dark" >

            <ImageView
                android:id="@+id/imgDirection"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/direction"
                android:tag="direction" />

            <ImageView
                android:id="@+id/imgFavorite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/favorite"
                android:tag="favorite" />

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/share"
                android:tag="share" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/wallet_dim_foreground_holo_dark"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Contact"
            android:textColor="#08088A"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/contactLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lblContact"
                style="@style/CodeFont" />

            <TextView
                android:id="@+id/lblContact1"
                style="@style/CodeFont" />

            <TextView
                android:id="@+id/lblContact2"
                style="@style/CodeFont" />
        </LinearLayout>

        <TextView
            android:id="@+id/photoHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/wallet_dim_foreground_holo_dark"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Photo"
            android:textColor="#08088A"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/photoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <TextView
            android:id="@+id/reviewHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/wallet_dim_foreground_holo_dark"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Reviews"
            android:textColor="#08088A"
            android:textSize="14sp" />

        <LinearLayout 
            android:id="@+id/reviewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/lblName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/lblReview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
            
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lblTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
           
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                  android:textColor="#91908C"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>